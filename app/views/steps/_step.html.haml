
%table
  - if step.completed
    %tr{:id=>"Step#{step.id}", :style=>"text-decoration:line-through"}
      %td
        = step.name
      %td
        = render 'steps/step_done_form',:step_id => step.entry_id, :id=>step.id
      %td
        = link_to 'delete', entry_step_path(step.entry_id, step.id),:method=>'delete', :remote=>true,:confirm=>'are you sure?',:class=>'btn'
  -else
    %tr{:id=>"Step#{step.id}"}
      %td
        = step.name
      %td
        = render 'steps/step_done_form',:step_id => step.entry_id, :id=>step.id
      %td
        = link_to 'delete', entry_step_path(step.entry_id, step.id),:method=>'delete', :remote=>true,:confirm=>'are you sure?'
